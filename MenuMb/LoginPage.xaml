<Page x:Class="MenuMb.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MenuMb"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage" Background="White">
    <Grid>
        <Border BorderBrush="Black" BorderThickness="1">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Height="30" HorizontalAlignment="Left">Логин</Label>
                <TextBox Width="150" Height="35" HorizontalAlignment="Right" Margin="10,0,10,0"></TextBox>
                <Label Height="30" HorizontalAlignment="Left">Пароль</Label>
                <PasswordBox Width="150" Height="35" HorizontalAlignment="Right" Margin="10,0,10,0"></PasswordBox>
                <Button x:Name="LoginBtn" Height="35" Margin="10,10,10,10">Войти</Button>
                <Button x:Name="RegBtn" Height="35" Margin="10,10,10,10" Click="RegBtn_Click">Зарегистрироватся</Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>
