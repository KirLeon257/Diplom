<Window x:Class="MenuMb.CoefWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenuMb"
        mc:Ignorable="d"
        Title="Коэффициенты переоценки" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Border VerticalAlignment="Top" HorizontalAlignment="Left" BorderBrush="Black" BorderThickness="1">
            <StackPanel>
                <Label  Width="100" Height="30" HorizontalAlignment="Left" VerticalAlignment="Top">Период</Label>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
                    <Label Width="100" Height="30">Месяц</Label>
                    <ComboBox x:Name="MonthComboBox" Width="100" Margin="10,0,10,0"></ComboBox>
                    <Label Width="100" Height="30">Год</Label>
                    <ComboBox x:Name="YearComboBox" Width="100" Margin="10,0,10,0"></ComboBox>
                </StackPanel>
            </StackPanel>
        </Border>
        <DataGrid x:Name="NewCoefDataGrid" Margin="0,80,0,45" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Код" Binding="{Binding Code}" IsReadOnly="True"></DataGridTextColumn>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}" IsReadOnly="True" MaxWidth="250"></DataGridTextColumn>
                <DataGridTextColumn Header="Значение" Binding="{Binding NewValue}">
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Button Width="100" Height="30" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" Click="Button_Click">Подтвердить</Button>
    </Grid>
</Window>
