<Window x:Class="MenuMb.Windows.OcAmortisationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenuMb.Windows"
        mc:Ignorable="d"
        Title="Амортизация ОС" Height="200" Width="300" Loaded="Window_Loaded">
    <Grid>
        <StackPanel Orientation="Vertical" Width="250" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label>Месяц</Label>
            <ComboBox x:Name="MonthComboBox"></ComboBox>
            <Label >Год</Label>
            <ComboBox x:Name="YearComboBox"></ComboBox>
            <Button Click="Button_Click" Margin="10">Подтвердить</Button>
        </StackPanel>
    </Grid>
</Window>
