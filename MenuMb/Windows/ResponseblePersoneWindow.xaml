<Window x:Class="MenuMb.ResponseblePersoneWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenuMb"
        mc:Ignorable="d"
        Title="Добавить МОЛ" Height="350" Width="300">
    <Grid>
        <ScrollViewer>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Height="30" HorizontalAlignment="Left">Код</Label>
                <TextBox x:Name="CodeTxt" Width="150" Height="35" HorizontalAlignment="Right" Margin="10,0,10,0"/>
                <Label Height="30" HorizontalAlignment="Left">Имя</Label>
                <TextBox x:Name="NameTxt" Width="150" Height="35" HorizontalAlignment="Right" Margin="10,0,10,0"></TextBox>
                <Label Height="30" HorizontalAlignment="Left">Фамилия</Label>
                <TextBox x:Name="SurnameTxt" Width="150" Height="35" HorizontalAlignment="Right" Margin="10,0,10,0"></TextBox>
                <Label Height="30" HorizontalAlignment="Left">Отчество</Label>
                <TextBox x:Name="PatronymicTxt" Width="150" Height="35" HorizontalAlignment="Right" Margin="10,0,10,0"></TextBox>
                <Button x:Name="AddBtn" Height="35" Margin="10,10,10,10" Content="Добавить" Click="AddBtn_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
