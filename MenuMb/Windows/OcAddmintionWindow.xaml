<Window x:Class="MenuMb.OcAddmintionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenuMb"
        mc:Ignorable="d"
        Title="Поступление ОС" Height="800" Width="800" Loaded="Window_Loaded">
    <ScrollViewer>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="553*"/>
                <ColumnDefinition Width="230*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="140"/>
                <RowDefinition Height="46*"/>
                <RowDefinition Height="59*"/>
                <RowDefinition Height="69*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="auto" MinHeight="82.491"/>
                <RowDefinition Height="114*"/>
                <RowDefinition Height="101*"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="140*"/>
                <RowDefinition Height="280*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="15,15,15,15" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Margin="0,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="55"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Vertical" Grid.Row="0">
                        <TextBlock FontFamily="Times New Roman" FontSize="10pt">УТВЕРЖДАЮ</TextBlock>
                        <TextBlock FontFamily="Times New Roman" FontSize="10pt">Руководитель организации-сдатчика</TextBlock>
                    </StackPanel>
                    <Grid Grid.Row="1" Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <TextBox Width="100" Grid.Row="0" HorizontalAlignment="Left"/>
                        <TextBlock Text="должность" Grid.Row="1" FontSize="10" Foreground="Gray" Margin="20,0,0,0" />
                        <TextBox Width="100" Grid.Row="0" HorizontalAlignment="Left" Margin="120,0,0,0"/>
                        <TextBlock Text="фамилия, инициалы" Grid.Row="1" FontSize="10" Foreground="Gray" Margin="125,0,0,0"/>
                    </Grid>
                    <DatePicker Grid.Row="2" HorizontalAlignment="Right" Width="300"></DatePicker>
                </Grid>
                <Grid Grid.Column="1" Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="55"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Vertical" Grid.Row="0">
                        <TextBlock FontFamily="Times New Roman" FontSize="10pt">УТВЕРЖДАЮ</TextBlock>
                        <TextBlock FontFamily="Times New Roman" FontSize="10pt">Руководитель организации-получателя</TextBlock>
                    </StackPanel>
                    <Grid Grid.Row="1" Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <TextBox Width="100" Grid.Row="0" HorizontalAlignment="Left"/>
                        <TextBlock Text="должность" Grid.Row="1" FontSize="10" Foreground="Gray" Margin="20,0,0,0" />
                        <TextBox Width="100" Grid.Row="0" HorizontalAlignment="Left" Margin="120,0,0,0"/>
                        <TextBlock Text="фамилия, инициалы" Grid.Row="1" FontSize="10" Foreground="Gray" Margin="125,0,0,0"/>
                    </Grid>
                    <DatePicker Grid.Row="2" HorizontalAlignment="Right" Width="300"></DatePicker>
                </Grid>

            </Grid>
            <Grid Grid.Row="1" Margin="8,0,0,10" Grid.Column="1">
                <DataGrid x:Name="FormCodesDataGrid" Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" AutoGenerateColumns="False" CanUserSortColumns="False" CanUserAddRows="False" ItemsSource="{Binding FormCodes}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="" Width="100" Binding="{Binding Name}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Коды документа" Width="*" Binding="{Binding Code,StringFormat={}{0:D7}}"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            <Grid Grid.Row="2" Margin="0,4,0,7">
                <StackPanel Orientation="Horizontal" Height="35" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Label Content="Организация-сдатчик"></Label>
                    <ComboBox x:Name="SupplierBox" Width="200" Margin="10,0"></ComboBox>
                    <Label>УНП</Label>
                    <TextBox x:Name="YNPTextBox" Width="130"></TextBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="3" Margin="0,2,0,16">
                <StackPanel Orientation="Horizontal" Height="35" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                    <Label Content="Организация-получатель"></Label>
                    <ComboBox  Width="200" Margin="5,0"></ComboBox>
                    <Label>УНП</Label>
                    <TextBox Width="130"></TextBox>
                </StackPanel>
            </Grid>
            <DataGrid x:Name="RecipientCodeDataGrid" Grid.Row="3" AutoGenerateColumns="False" CanUserSortColumns="False" CanUserAddRows="False" ItemsSource="{Binding FormCodes}" Grid.ColumnSpan="2" Margin="553,12,0,16">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="" Width="100" Binding="{Binding Name}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Коды получателя" Width="*" Binding="{Binding Code,StringFormat={}{0:D7}}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Row="5" Margin="0,2,0,2">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Label>Основание для составления акта</Label>
                    <ComboBox Width="200">
                        <ComboBoxItem Content="Приказ"/>
                        <ComboBoxItem Content="Договор"/>
                        <ComboBoxItem Content="Распоряжение"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
            <DataGrid x:Name="BasisInfoDataGrid" Grid.Row="5"  AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" Grid.ColumnSpan="2" Margin="553,2,0,2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Номер" Binding="{Binding Basis_number}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Дата" Binding="{Binding Basis_date}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Row="6" Grid.ColumnSpan="2">
                <ScrollViewer HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Disabled">
                    <StackPanel Orientation="Horizontal">
                        <!--<Label VerticalAlignment="Center">Номер</Label>
                        <TextBox VerticalAlignment="Center" Height="35" Width="120"></TextBox>-->
                        <Label VerticalAlignment="Center">Дата составления</Label>
                        <DatePicker VerticalAlignment="Center" Height="35" Width="120" SelectedDateFormat="Short"></DatePicker>
                        <Label VerticalAlignment="Center">Дата принятия к учету</Label>
                        <DatePicker VerticalAlignment="Center" Height="35" Width="120" SelectedDateFormat="Short"></DatePicker>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
            <Grid Grid.Row="7" Grid.ColumnSpan="2" VerticalAlignment="Top" HorizontalAlignment="Center" Width="500" Margin="15">
                <StackPanel>
                    <Label>Обьект основных средств</Label>
                    <TextBox x:Name="OcNomenNameTextBox"></TextBox>
                    <Button Click="Button_Click">Выбрать</Button>
                </StackPanel>
            </Grid>
            <Label Grid.Row="8" Grid.ColumnSpan="2" VerticalAlignment="Center" FontFamily="Times New Roman" FontSize="11" FontWeight="Bold" HorizontalAlignment="Center">Краткая индивидуальная характеристика объекта основных средств</Label>
            <DataGrid x:Name="OcXaracteristicDataGrid" Grid.Row="9">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Наименование ОС"></DataGridTextColumn>
                    <DataGridTextColumn Header="Кол-во"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <!--<DataGrid Grid.Row="10" Margin="0,15,0,0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Наименование признаков, характеризующих объект основных средств"/>
                    <DataGridTextColumn Header="Основного ОС"/>
                    <DataGridTextColumn Header="Пристроенных"/>
                </DataGrid.Columns>
            </DataGrid>-->
            <Grid Grid.Row="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition Height="auto"></RowDefinition>
                </Grid.RowDefinitions>
                <Label Grid.Column="0" Grid.Row="0">Комиссия по приему</Label>
                <Label Grid.Column="0" Grid.Row="1">Результат испытания на:</Label>
                <DatePicker Grid.Column="1" Grid.Row="1" Width="250" HorizontalAlignment="Left"></DatePicker>
                <Label Grid.Column="0" Grid.Row="2">Объект основных средств техническим условиям</Label>
                <ComboBox Grid.Column="1" Grid.Row="2">
                    <ComboBoxItem>соответствует</ComboBoxItem>
                    <ComboBoxItem>не соответствует</ComboBoxItem>
                </ComboBox>
                <Label Grid.Column="0" Grid.Row="3">Доработка</Label>
                <ComboBox Grid.Column="1" Grid.Row="3">
                    <ComboBoxItem>требуется</ComboBoxItem>
                    <ComboBoxItem>не требуется</ComboBoxItem>
                </ComboBox>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
