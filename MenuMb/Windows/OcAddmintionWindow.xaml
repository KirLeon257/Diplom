<Window x:Class="MenuMb.OcAddmintionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenuMb"
        mc:Ignorable="d"
        Title="Поступление ОС" Height="800" Width="800" Loaded="Window_Loaded">
    <ScrollViewer>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="553*"/>
                <ColumnDefinition Width="230*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="140"/>
                <RowDefinition Height="69*"/>
                <RowDefinition Height="70*"/>
                <RowDefinition Height="55*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="46*"/>
                <RowDefinition Height="394*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="15,15,15,15" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Margin="0,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="55"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Vertical" Grid.Row="0">
                        <TextBlock FontFamily="Times New Roman" FontSize="10pt">УТВЕРЖДАЮ</TextBlock>
                        <TextBlock FontFamily="Times New Roman" FontSize="10pt">Руководитель организации-сдатчика</TextBlock>
                    </StackPanel>
                    <Grid Grid.Row="1" Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <TextBox Width="100" Grid.Row="0" HorizontalAlignment="Left"/>
                        <TextBlock Text="должность" Grid.Row="1" FontSize="10" Foreground="Gray" Margin="20,0,0,0" />
                        <TextBox Width="100" Grid.Row="0" HorizontalAlignment="Left" Margin="120,0,0,0"/>
                        <TextBlock Text="фамилия, инициалы" Grid.Row="1" FontSize="10" Foreground="Gray" Margin="125,0,0,0"/>
                    </Grid>
                    <DatePicker Grid.Row="2" HorizontalAlignment="Right" Width="300"></DatePicker>
                </Grid>
                <Grid Grid.Column="1" Margin="10,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="55"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Vertical" Grid.Row="0">
                        <TextBlock FontFamily="Times New Roman" FontSize="10pt">УТВЕРЖДАЮ</TextBlock>
                        <TextBlock FontFamily="Times New Roman" FontSize="10pt">Руководитель организации-получателя</TextBlock>
                    </StackPanel>
                    <Grid Grid.Row="1" Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <TextBox Width="100" Grid.Row="0" HorizontalAlignment="Left"/>
                        <TextBlock Text="должность" Grid.Row="1" FontSize="10" Foreground="Gray" Margin="20,0,0,0" />
                        <TextBox Width="100" Grid.Row="0" HorizontalAlignment="Left" Margin="120,0,0,0"/>
                        <TextBlock Text="фамилия, инициалы" Grid.Row="1" FontSize="10" Foreground="Gray" Margin="125,0,0,0"/>
                    </Grid>
                    <DatePicker Grid.Row="2" HorizontalAlignment="Right" Width="300"></DatePicker>
                </Grid>

            </Grid>
            <Grid Grid.Row="1" Margin="8,0,0,10" Grid.Column="1">
                <DataGrid x:Name="FormCodesDataGrid" Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" AutoGenerateColumns="False" CanUserSortColumns="False" CanUserAddRows="False" ItemsSource="{Binding FormCodes}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="" Width="100" Binding="{Binding Name}"></DataGridTextColumn>
                        <DataGridTextColumn Header="Коды документа" Width="*" Binding="{Binding Code,StringFormat={}{0:D7}}"></DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            <Grid Grid.Row="2" Margin="0,4,0,0">
                <StackPanel Orientation="Horizontal" Height="35" VerticalAlignment="Center" HorizontalAlignment="Left">
                    <Label Content="Организация-сдатчик"></Label>
                    <ComboBox x:Name="SupplierBox" Width="200" Margin="10,0"></ComboBox>
                    <Label>УНП</Label>
                    <TextBox x:Name="YNPTextBox" Width="130"></TextBox>
                </StackPanel>
            </Grid>
            <Grid Grid.Row="2" Margin="0,60,0,0" Grid.RowSpan="2">
                <StackPanel Orientation="Horizontal" Height="35" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                    <Label Content="Организация-получатель"></Label>
                    <ComboBox  Width="200" Margin="5,0"></ComboBox>
                    <Label>УНП</Label>
                    <TextBox Width="130"></TextBox>
                </StackPanel>
            </Grid>
            <DataGrid x:Name="RecipientCodeDataGrid" Grid.Row="2" AutoGenerateColumns="False" CanUserSortColumns="False" CanUserAddRows="False" ItemsSource="{Binding FormCodes}" Grid.ColumnSpan="2" Margin="553,70,0,0" Grid.RowSpan="2">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="" Width="100" Binding="{Binding Name}"></DataGridTextColumn>
                    <DataGridTextColumn Header="Коды получателя" Width="*" Binding="{Binding Code,StringFormat={}{0:D7}}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Row="5">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center">
                    <Label>Основание для составления акта</Label>
                    <ComboBox Width="200">
                        <ComboBoxItem Content="Приказ"/>
                        <ComboBoxItem Content="Договор"/>
                        <ComboBoxItem Content="Распоряжение"/>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Window>
