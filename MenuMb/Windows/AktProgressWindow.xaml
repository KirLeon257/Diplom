<Window x:Class="MenuMb.Windows.AktProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:MenuMb.Windows"
        Title="Создание отчета" Height="200" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Создание отчета..." FontSize="16" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <ProgressBar x:Name="progressBar" Height="20" Minimum="0" Maximum="100"/>
            <TextBlock x:Name="statusText" Text="" HorizontalAlignment="Center" 
                       Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
