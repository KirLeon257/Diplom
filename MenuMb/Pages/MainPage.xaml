<Page x:Class="MenuMb.Pages.ReferenceInformationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MenuMb.Pages"
      Background="White"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Заполнение данных">
    <Grid>
        <WrapPanel Orientation="Horizontal">
            <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,0,0">
                <StackPanel Width="250" Orientation="Vertical">
                    <Label FontSize="20" FontStyle="Normal" FontWeight="Black" FontFamily="Times New Roman" VerticalAlignment="Top" HorizontalAlignment="Left" Height="40">Структура предприятия</Label>
                    <!--<Button Height="30" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left">
                        <TextBlock>
                            Цеха
                        </TextBlock>
                    </Button>-->
                    <Button Height="30" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Click="Button_Click">
                        <TextBlock>
                            Подразделения
                        </TextBlock>
                    </Button>
                </StackPanel>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,0,0">
                <StackPanel Width="250" Orientation="Vertical">
                    <Label FontSize="20" FontStyle="Normal" FontWeight="Black" FontFamily="Times New Roman" VerticalAlignment="Top" HorizontalAlignment="Left" Height="40">Контрагенты</Label>
                    <Button Height="30" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Click="Button_Click_1">
                        <TextBlock>
                            Поставщики
                        </TextBlock>
                    </Button>
                </StackPanel>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,0,0">
                <StackPanel Width="250" Orientation="Vertical">
                    <Label FontSize="20" FontStyle="Normal" FontWeight="Black" FontFamily="Times New Roman" VerticalAlignment="Top" HorizontalAlignment="Left" Height="40">Справочник</Label>
                    <Button Height="30" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Click="Button_Click_2">
                        <TextBlock>
                 МОЛ(Материально ответственные лица)
                        </TextBlock>
                    </Button>
                    <Button Height="30" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Click="Button_Click_6">
                        <TextBlock>
                             Коэффициенты переоценки
                        </TextBlock>
                    </Button>
                    <!--<Button Height="30" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Click="Button_Click_3">
                        <TextBlock>
                            Коды оборудования
                        </TextBlock>
                    </Button>-->
                </StackPanel>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1">
                <StackPanel Width="250">
                    <Label FontSize="20" FontStyle="Normal" FontWeight="Black" FontFamily="Times New Roman" VerticalAlignment="Top" HorizontalAlignment="Left" Height="40">Основные средства</Label>
                    <Button Height="30" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Click="Button_Click_5">
                        <TextBlock>
                            Виды ОС
                        </TextBlock>
                    </Button>
                    <Button Height="30" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Click="Button_Click_5">
                        <TextBlock>
                            Группы ОС
                        </TextBlock>
                    </Button>
                    <!--<Button Height="30" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Click="Button_Click_4">
                        <TextBlock>
                            Номенклатура
                        </TextBlock>
                    </Button>-->
                </StackPanel>
            </Border>
        </WrapPanel>
    </Grid>
</Page>
