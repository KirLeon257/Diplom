<Page x:Class="MenuMb.Pages.CoefficientsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MenuMb.Pages"
      mc:Ignorable="d" 
      Background="White"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CoefficientsPage" >
    <Grid>
        <Menu Height="35" VerticalAlignment="Top">
            <MenuItem Header="Коэф" Height="35">
                <MenuItem Header="Создать" Click="MenuItem_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <DataGrid x:Name="CoefDataGrid" Margin="0,35,0,0" AutoGenerateColumns="True" IsReadOnly="False" VerticalScrollBarVisibility="Auto" CanUserAddRows="True">
            <DataGrid.Columns>
                <DataGridComboBoxColumn Header="Код" ItemsSource="{Binding coefficients}" IsReadOnly="True"></DataGridComboBoxColumn>
                <DataGridTextColumn Header="Наименование" Width="auto" Binding="{Binding Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="СПИ" Width="auto" Binding="{Binding SPI}"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
