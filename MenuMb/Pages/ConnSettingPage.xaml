<Page x:Class="MenuMb.ConnSettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MenuMb" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ConnSettingPage" Loaded="Page_Loaded">
    <Grid>
        <Button Width="100" Height="30" Click="Button_Click" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left">Назад</Button>
        <StackPanel Orientation="Vertical" Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Адрес сервера"></Label>
            <!--<xctk:MaskedTextBox Mask="http:\/\/" x:Name="ServerIpTxt" Margin="0,10,0,0"/>-->
            <TextBox x:Name="ServerIpTxt" Margin="0,10,0,0"></TextBox>
            <Button x:Name="SaveBtn" Height="30" Margin="10" FontSize="18" Click="SaveBtn_Click">Сохранить</Button>
        </StackPanel>
    </Grid>
</Page>
