<Page x:Class="MenuMb.Pages.OCNomenclaturaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MenuMb.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="Номенклатура ОС">
    <Grid>
        <Menu Height="35" VerticalAlignment="Top">
            <MenuItem Header="Номенклатура">
                <MenuItem Header="Создать"></MenuItem>
            </MenuItem>
        </Menu>
        <DataGrid Margin="0,35,0,0">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование"></DataGridTextColumn>
                <DataGridTextColumn Header="Тип ОС" Width="auto"></DataGridTextColumn>
                <DataGridTextColumn Header="МОЛ" Width="auto"></DataGridTextColumn>
                <DataGridTextColumn Header="Первоначальная стоимость"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
