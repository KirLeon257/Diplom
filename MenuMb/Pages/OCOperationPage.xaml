<Page x:Class="MenuMb.Pages.OCOperationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MenuMb.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Операции с ОС" Background="White">
    <Grid>
        <WrapPanel Orientation="Horizontal">
            <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,0,0">
                <StackPanel Width="250" Orientation="Vertical">
                    <Label FontSize="20" FontStyle="Normal" FontWeight="Black" FontFamily="Times New Roman" VerticalAlignment="Top" HorizontalAlignment="Left" Height="40">
                        Движение ОС
                    </Label>
                    <Button Height="30" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Click="Button_Click">
                        <TextBlock>
                            Принятие ОС
                        </TextBlock>
                    </Button>
                    <Button Height="30" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Click="Button_Click_2">
                        <TextBlock>
                            Перемещение ОС
                        </TextBlock>
                    </Button>
                    <Button Height="30" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Click="Button_Click_4">
                        <TextBlock>
                         Выбытие ОС
                        </TextBlock>
                    </Button>
                </StackPanel>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,0,0">
                <StackPanel Width="250" Orientation="Vertical">
                    <Label FontSize="20" FontStyle="Normal" FontWeight="Black" FontFamily="Times New Roman" VerticalAlignment="Top" HorizontalAlignment="Left" Height="40">
                        Переоценка ОС
                    </Label>
                    <Button Height="30" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Click="Button_Click_3">
                        <TextBlock>
                        Переоценка ОС
                        </TextBlock>
                    </Button>
                </StackPanel>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" Margin="0,0,0,0">
                <StackPanel Width="250" Orientation="Vertical">
                    <Label FontSize="20" FontStyle="Normal" FontWeight="Black" FontFamily="Times New Roman" VerticalAlignment="Top" HorizontalAlignment="Left" Height="40">
                        Амортизация
                    </Label>
                    <Button Height="30" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Left" Click="Button_Click_1">
                        <TextBlock>
                            Расчет амортизации ОС
                        </TextBlock>
                    </Button>
                </StackPanel>
            </Border>
        </WrapPanel>
    </Grid>
</Page>
