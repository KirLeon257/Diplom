<Page x:Class="MenuMb.Pages.OcAddmitionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MenuMb.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="White"
      Title="OcAddmitionPage">
    <Grid>
        <Menu Height="35" VerticalAlignment="Top">
            <MenuItem Header="Номенклатура">
                <MenuItem Header="Создать"></MenuItem>
            </MenuItem>
        </Menu>
        <DataGrid Margin="0,35,0,0" x:Name="OcNomenDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Наименование" Binding="{Binding Name}"></DataGridTextColumn>
                <DataGridTextColumn Header="Тип ОС" Width="auto" Binding="{Binding OCType}" MaxWidth="250"></DataGridTextColumn>
                <DataGridTextColumn Header="Инв. №" Width="auto" Binding="{Binding Inventory_Number}"></DataGridTextColumn>
                <DataGridTextColumn Header="Дата ввода ОС" ></DataGridTextColumn>
                <DataGridTextColumn Header="МОЛ" Width="auto" Binding="{Binding MOL}"></DataGridTextColumn>
                
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
