<Page x:Class="MenuMb.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MenuMb"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="300"
      Title="LoginPage" Background="White" Loaded="Page_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" VerticalAlignment="Bottom" HorizontalAlignment="Center" Source="/Images/atlant_logo.png" MaxHeight="80" Height="62" Margin="0,0,0,10"/>
        <Button Grid.Row="0" Width="30" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Background="White" Margin="0,10,10,0" BorderThickness="0" Click="Button_Click">
            <Image Source="/free-icon-setting-4443102.png"></Image>
        </Button>
        <Border BorderBrush="Black" BorderThickness="1" VerticalAlignment="Top" HorizontalAlignment="Center" Padding="20" Background="White" Margin="0,2,0,0" Grid.Row="1">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Label Height="30" HorizontalAlignment="Left">Логин</Label>
                <TextBox x:Name="LoginTxt" Width="150" Height="35" HorizontalAlignment="Right" Margin="10,0,10,0"></TextBox>
                <Label Height="30" HorizontalAlignment="Left">Пароль</Label>
                <PasswordBox x:Name="PwdTxt" Width="150" Height="35" HorizontalAlignment="Right" Margin="10,0,10,0"></PasswordBox>
                <Button x:Name="LoginBtn" Height="35" Margin="10,10,10,10" Click="LoginBtn_Click">Войти</Button>
                <Button x:Name="RegBtn" Height="35" Margin="10,10,10,10" Click="RegBtn_Click">Зарегистрироватся</Button>
            </StackPanel>
        </Border>
    </Grid>
</Page>
