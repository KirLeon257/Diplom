<Page x:Class="MenuMb.Pages.DepartmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MenuMb.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Подразделения" Background="White" Loaded="Page_Loaded">
    <Grid>
        <Menu Panel.ZIndex="1" VerticalAlignment="Top"  Background="Azure">
            <MenuItem Header="Подразделение" Height="35">
                <MenuItem Header="Создать" Click="MenuItem_Click"></MenuItem>
            </MenuItem>
        </Menu>
        <ScrollViewer>
            <DataGrid Grid.Row="1" x:Name="DepartmentDataGrid" AutoGenerateColumns="False" Width="450" Height="283" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,45,0,0" IsReadOnly="True" CanUserAddRows="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Наименование" Binding="{Binding Name}"></DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
    </Grid>
</Page>
