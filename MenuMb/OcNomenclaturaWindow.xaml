<Window x:Class="MenuMb.OcNomenclaturaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MenuMb"
        mc:Ignorable="d"
        Title="OcNomenclaturaWindow" Height="450" Width="800">
    <Grid>
        <ScrollViewer>
            <StackPanel Orientation="Vertical" HorizontalAlignment="Left">
                <Label Width="100" Height="30">Наименование</Label>
                <TextBox Width="100" Height="30"></TextBox>
                <Label Width="100" Height="30">Тип ОС</Label>
                <TextBox Width="100" Height="30"></TextBox>
                <Label Width="100" Height="30">МОЛ</Label>
                <ComboBox Width="100" Height="30"></ComboBox>
                <Label Height="30">Код оборудования</Label>
                <TextBox Height="30"></TextBox>
                <Label Height="30" >Первоначальная стоимость</Label>
                <TextBox Width="100" Height="30"></TextBox>
                <Label Height="30">Дата создания</Label>
                <DatePicker Width="100" Height="30"></DatePicker>
                <Label Height="30" >Дата ввода</Label>
                <DatePicker Width="100" Height="30"></DatePicker>
                <Label Height="30">Отсавшийся срок</Label>
                <TextBox Width="100" Height="30"></TextBox>
                <Label Height="30">Тип амортизации</Label>
                <TextBox  Height="30"></TextBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
